/* Estilos personalizados para o sistema LivroTech */

:root {
    --primary-color: #1a73e8;
    --secondary-color: #34a853;
    --accent-color: #fbbc05;
    --dark-color: #202124;
    --light-color: #f8f9fa;
    --gray-color: #dadce0;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
    background-color: #f8f9fa;
}

/* Header e Navegação */
.navbar-brand {
    font-weight: 700;
    font-size: 1.5rem;
}

.bg-primary {
    background-color: var(--primary-color) !important;
}

.btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-primary:hover {
    background-color: #0d62d1;
    border-color: #0d62d1;
}

/* Hero Section */
.hero-section {
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.1) 0%, rgba(52, 168, 83, 0.1) 100%);
    padding: 6rem 0;
}

/* Feature Icons */
.feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    font-size: 1.5rem;
}

/* Card Hover Effect */
.card {
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

/* Form Styles */
.form-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
}

.form-label {
    font-weight: 500;
}

.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.25rem rgba(26, 115, 232, 0.25);
}

/* Login Page */
.login-container {
    max-width: 400px;
    margin: 4rem auto;
}

/* Dashboard */
.dashboard-stats .card {
    border-left: 4px solid var(--primary-color);
}

.dashboard-stats .card-icon {
    font-size: 2rem;
    opacity: 0.7;
}

/* Tables */
.table-container {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.table th {
    font-weight: 600;
    background-color: rgba(26, 115, 232, 0.1);
}

/* Pagination */
.page-item.active .page-link {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.page-link {
    color: var(--primary-color);
}

/* Actions Buttons */
.btn-action {
    width: 32px;
    height: 32px;
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    margin-right: 5px;
}

/* Footer */
footer a {
    text-decoration: none;
}

footer .list-inline-item:not(:last-child) {
    margin-right: 1rem;
}

footer .fab {
    font-size: 1.25rem;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .hero-section {
        padding: 4rem 0;
    }
    
    .display-4 {
        font-size: 2.5rem;
    }
}

/* Auth Pages (Login, Register) */
.auth-container {
    min-height: calc(100vh - 72px - 80px);
    display: flex;
    align-items: center;
}

/* Dashboard Cards */
.dashboard-card {
    border: none;
    border-radius: 10px;
    transition: all 0.3s ease;
}

.dashboard-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}

.dashboard-card .card-icon {
    width: 50px;
    height: 50px;
    background: rgba(26, 115, 232, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    margin-bottom: 15px;
}

.dashboard-card .card-icon i {
    color: var(--primary-color);
    font-size: 1.5rem;
}

/* Badge Styles */
.badge-primary {
    background-color: var(--primary-color);
}

.badge-success {
    background-color: var(--secondary-color);
}

/* Animations */
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.animated {
    animation: fadeIn 0.5s ease-in-out;
}
